@model Model.Ordre




<div class="container mt-100 bg-light p-5">
    <div class="py-5 text-center">
        @if (Model == null)
        {

            <h3>Direkte aksess ikke tillatt</h3>
            return;
        }
        <h2>Bestillingsoversikt</h2>
        <p class="lead">Nedenfor ser du en oversikt over orderen din, du kan velge å laste den ned, eller<a href="@Url.Action("Filmer", "Film")"> fortsette å handle.</a></p>
    </div>

    <div class="row">
        
        <div class="col">
            <div class="mb-3">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Din ordre #@Model.ID</span>
                </h4>
                @{
                    <ul class="list-group mb-3">
                        @foreach (var vareLinje in Model.OrdreLinjer)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-condensed">

                                <div class="clearfix col-sm d-flex align-items-center h-100 pr-0">
                                    <img src="@vareLinje.Film.Filmbilde" class="float-left" alt="@vareLinje.Film.Filmnavn" style="width: 70px;">
                                    <h6 class="my-0 align-middle">@vareLinje.Film.Filmnavn</h6>
                                    <small class="text-muted align-middle ml-2">x @vareLinje.Antall</small>
                                    <a href="#">Last Ned</a>
                                    <small class="text-muted align-middle ml-auto">
                                        Kr @vareLinje.Pris ,-
                                    </small>

                                </div>

                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total (NOK)</span>
                            <strong>Kr @Model.TotalPris</strong>
                        </li>

                    </ul>
                }
                <hr class="mb-4">
                <div class="col-xs-6">
                    <h4 class="mb-3">Faktureringsdetaljer</h4>
                    <p class="my-0">@Html.DisplayFor(modelItem => Model.Kunde.Fornavn) @Html.DisplayFor(modelItem => Model.Kunde.Etternavn)</p>
                    <p class="my-0">@Html.DisplayFor(modelItem => Model.Kunde.Postnummer) @Html.DisplayFor(modelItem => Model.Kunde.Poststed)</p>
                    <p class="my-0">@Html.DisplayFor(modelItem => Model.Kunde.Adresse)<p>
                </div>
                <div class="col-xs-6">
                    <h4 class="mb-3">Dato</h4>
                    <p class="my-0">@Html.DisplayFor(modelItem => Model.Dato)</p>
                </div>
            </div>
        </div>
    </div>

</div>