@model List<Model.Film>


<div class="row mr-0 ml-0">
        <div id="overlay">
            <div style="width:100%">

                <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{ bool first = false;
                            for (var i = 0; i < Model.Count; i++)
                            {

                                if (Model[i].Fremhevet == true && first == false)
                                {
                                    
                                    <div class="carousel-item active">
                                        <a href="#filmPopupModal" id="filmModal" data-navn="@Model[i].Filmnavn" data-id="@Model[i].ID" data-filmbilde="@Model[i].Filmbilde" data-beskrivelse="@Model[i].Beskrivelse" data-pris="@Model[i].Pris" data-sjanger="@Model[i].Sjanger" data-toggle="modal" data-filmModal="true">
                                            <img class="d-block w-100" src="@Model[i].FremhevetBilde" alt="First slide">
                                        </a>
                                    </div>

                                    first = true;
                                }
                                if (Model[i].Fremhevet == true && first == true)
                                {
                                    
                                    <div class="carousel-item">
                                        <a href="#filmPopupModal" id="filmModal" data-navn="@Model[i].Filmnavn" data-id="@Model[i].ID" data-filmbilde="@Model[i].Filmbilde" data-beskrivelse="@Model[i].Beskrivelse" data-pris="@Model[i].Pris" data-sjanger="@Model[i].Sjanger" data-toggle="modal" data-filmModal="true">
                                            <img class="d-block w-100" src="@Model[i].FremhevetBilde" alt="First slide">
                                        </a>  
                                    </div>
                                }
                            }
                        }
                        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row body-content mr-0 ml-0" style="margin-top: 30px;">

            @foreach (var film in Model)
            {
                @Html.Partial("_ListeFilm", film);

            }
        </div>
</div>



